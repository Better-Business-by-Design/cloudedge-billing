<MudSelect T="@(Account)" Value="Account" ValueChanged="HandleValueChanged" Dense="true">
    @foreach (var account in Accounts)
    {
        <MudSelectItem Value="@account">@account.Name</MudSelectItem>
    }
</MudSelect>

@code{
    [Parameter]
    [EditorRequired]
    public CellContext<LineItem> Context { get; set; } = default!;

    [Parameter]
    public IEnumerable<Account> Accounts { get; set; } = default!;

    [CascadingParameter]
    public MudDataGrid<LineItem> DataGrid { get; set; } = default!;

    private Account Account => Context.Item.Account;

    private async Task HandleValueChanged(Account newAccount)
    {
        Context.Item.Account = newAccount;
        await DataGrid.CommittedItemChanges.InvokeAsync(Context.Item);
    }
}