@inherits Pricing

@{
    base.BuildRenderTree(__builder);
}

@code {
    protected override IQueryable<Schedule> FilterFullQuery(IQueryable<Schedule> fullQuery, IEnumerable<IFilterDefinition<Schedule>> filterDefinitions)
    {
        fullQuery = fullQuery.Where(schedule => schedule.StatusId == StatusId.Pending);
        return base.FilterFullQuery(fullQuery, filterDefinitions);
    }
}