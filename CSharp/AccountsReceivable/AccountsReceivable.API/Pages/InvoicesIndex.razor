@page "/InvoicesIndex"
@inherits Invoices

@{
    base.BuildRenderTree(__builder);
}

@code {
    protected override IQueryable<Document> FilterFullQuery(IQueryable<Document> fullQuery, IEnumerable<IFilterDefinition<Document>> filterDefinitions)
    {
        fullQuery = fullQuery.Where(document => document.StatusId == StatusId.Pending);
        return base.FilterFullQuery(fullQuery, filterDefinitions);
    }
}