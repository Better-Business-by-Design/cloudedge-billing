@page "/pricing"
@inherits DataGridPage<Schedule>

<Breadcrumb Items="_breadcrumb" />

<MudDataGrid 
    @ref="DataGrid"
    T="Schedule"
    ServerData="@(new Func<GridState<Schedule>, Task<GridData<Schedule>>>(GridServerReload))"
    SortMode="SortMode.Multiple"
    Filterable="true"
    RowClick="@RowClicked"
    Dense="true"
    Hover="true"
    Striped="true"
    RowStyleFunc="@RowStyleFunc">
    <Columns>
        <PropertyColumn Property="x => x.StartDate" Format="dd/MM/yyyy" Title="Start Date"/>
        <PropertyColumn Property="x => x.EndDate" Format="dd/MM/yyyy" Title="End Date"/>
        <PropertyColumn Property="x => x.Meatwork.Name" Title="Works"/>
        <PropertyColumn Property="x => x.StatusId" Title="Status"/>
    </Columns>
    <NoRecordsContent>
        <MudText>No matching Pricing Schedules found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading Pricing Schedules...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager T="Schedule" PageSizeOptions="new[] { 20, 40, 80 }"/>
    </PagerContent>
</MudDataGrid>