@page "/pricing"
@inherits DataGridPage<Schedule>

<Breadcrumb Items="_breadcrumb" />

<MudDataGrid 
    @ref="DataGrid" T="Schedule" ServerData="@(new Func<GridState<Schedule>, Task<GridData<Schedule>>>(GridServerReload))"
    SortMode="SortMode.Multiple" Filterable="true" FilterMode="DataGridFilterMode.ColumnFilterMenu"
    RowClick="@RowClicked" RowStyleFunc="@RowStyleFunc"
    FixedHeader="true" Dense="true" Hover="true" Striped="true" Bordered="true" Height="calc(100vh - 9.8rem)">
    <Columns>
        <PropertyColumn Property="@(x => x.StartDate)" Format="dd/MM/yyyy" Title="Start Date" />
        <PropertyColumn Property="@(x => x.EndDate)" Format="dd/MM/yyyy" Title="End Date" />
        <PropertyColumn Property="@(x => x.Meatwork.Name)" Title="Works" />
        <PropertyColumn Property="@(x => x.StatusId)" Title="Status" />
    </Columns>
    <NoRecordsContent>
        <MudText>No matching Pricing Schedules found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading Pricing Schedules...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager T="Schedule" PageSizeOptions="new[] { 25, 50, 100 }"/>
    </PagerContent>
</MudDataGrid>