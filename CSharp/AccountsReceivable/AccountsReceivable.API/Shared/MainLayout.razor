@using System.Security.Claims
@inherits LayoutComponentBase

<MudLayout>
            <MudAppBar Fixed="true">
                <MudLink Href="">
                    <MudImage Height="50" Src="assets/merge.png" Alt="Merge Logo"></MudImage>
                </MudLink>
                <MudSpacer/>
                <MudLink Class="mx-4" Color="Color.Inherit" Href="customers">All Customers</MudLink>
                <MudLink Class="mx-4" Color="Color.Inherit" Href="plans">Pay Monthly Plans</MudLink>
                <MudSpacer/>
                <MudText>@(User.Claims.FirstOrDefault(c => c.Type.Equals("name"))?.Value ?? string.Empty)</MudText>
            </MudAppBar>

            <MudMainContent>
                @Body
            </MudMainContent>

</MudLayout>