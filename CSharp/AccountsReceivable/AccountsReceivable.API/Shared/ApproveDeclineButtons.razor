@if ((Role ?? RoleId.None) is RoleId.ReadWrite or RoleId.Administrator)
{
    @if (RecalculateTask is not null)
    {
        <MudTooltip Text="Recalculate Pricing">
            <MudIconButton
                Color="Color.Inherit"
                Variant="Variant.Filled"
                Class="ml-2"
                Icon="@Icons.Material.Filled.Calculate"
                OnClick="@RecalculateTask"
                Disabled="@IsStatusApproved()"/>
        </MudTooltip>
    }
    
    <MudTooltip Text="BCI PDF">
        <MudIconButton
            Color="Color.Inherit"
            Variant="Variant.Filled"
            Class="ml-2"
            Icon="@Icons.Material.Filled.PictureAsPdf"/>
    </MudTooltip>
    
    @if (CommentTask is not null)
    {
        <MudTooltip Text="Comments">
            <MudIconButton
                Color="Color.Default"
                Variant="Variant.Filled"
                Class="ml-2"
                Icon="@Icons.Material.Rounded.Comment"
                OnClick="@InvokeCommentTask" />
        </MudTooltip>
    }
    
    @if (TransitTask is not null)
    {
        <MudButton
            Color="Color.Secondary"
            Variant="Variant.Filled"
            Class="ml-2"
            StartIcon="@Icons.Material.Filled.DirectionsTransit"
            OnClick="@TransitTask"
            Disabled="@IsStatusNotPendingOrDeclined()">
            ATS
        </MudButton>
    }

    @if (SetApprovedTask is not null)
    {
        <MudButton
            Color="Color.Primary"
            Variant="Variant.Filled"
            Class="ml-2"
            OnClick="@OpenApproveDialog"
            Disabled="@(IsStatusNotPendingOrDeclined() || TransitRequired)">
            Approve
        </MudButton>
    }

    @if (SetApprovedTask is not null)
    {
        <MudButton
            Color="Color.Error"
            Variant="Variant.Filled"
            Class="ml-2"
            OnClick="@OpenDeclineDialog"
            Disabled="@IsStatusNotPending()">
            Decline
        </MudButton>
    }
}